<addon id="skin.box" name="BOX" provider-name="DjCisco" version="6.4.2">
	<requires>
		<import addon="xbmc.gui" version="5.14.0" />
		<import addon="script.favourites" version="6.0.1" />
		<import addon="service.skin.widgets" version="0.0.29" />
	</requires>
	<extension debugging="false" effectslowdown="1.00" point="xbmc.gui.skin">
		<res aspect="16:9" default="true" folder="720p" height="720" width="1280" />
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">BOX - Harvesting the power of basics.</summary>
		<description lang="en_GB">Inspired by LightBox and nbox, BOX is about providing diversity with consistency. The skin principle is using the same layout and building blocks to display your media in different ways. So it always looks the same but in a different way</description>
		<platform>all</platform>
		<license>Creative Commons Attribution-Share Alike 3.0 Unported License</license>
		<forum>http://forum.kodi.tv/forumdisplay.php?fid=217</forum>
		<source>https://github.com/DjCisco/skin.BOX</source>
		        <assets>
            <icon>resources/icon.png</icon>
