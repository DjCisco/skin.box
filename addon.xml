<?xml version="1.0" encoding="UTF-8"?>
<addon 
	id="skin.box"
	version="5.0.6"
	name="BOX"
	provider-name="DjCisco">
	<requires>
		<import addon="xbmc.gui" version="5.12.0"/>
		<import addon="script.favourites" version="6.0.1"/>
		<import addon="service.skin.widgets" version="0.0.29"/>
	</requires>
	<extension
		point="xbmc.gui.skin"
		debugging="false"
		effectslowdown="1.00">
		<res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">BOX - Harvesting the power of basics.</summary>
		<description lang="en">Inspired by LightBox and nbox, BOX is about providing diversity with consistency. The skin principle is using the same layout and building blocks to display your media in different ways. So it always looks the same but in a different way</description>
		<platform>all</platform>
		<license>Creative Commons Attribution-Share Alike 3.0 Unported License</license>
		<forum>http://forum.kodi.tv/forumdisplay.php?fid=217</forum>
		<source>https://github.com/DjCisco/skin.BOX</source>
		        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <screenshot>resources/screenshot01.jpg</screenshot>
            <screenshot>resources/screenshot02.jpg</screenshot>
            <screenshot>resources/screenshot03.jpg</screenshot>
            <screenshot>resources/screenshot04.jpg</screenshot>
            <screenshot>resources/screenshot05.jpg</screenshot>
            <screenshot>resources/screenshot06.jpg</screenshot>
            <screenshot>resources/screenshot07.jpg</screenshot>
            <screenshot>resources/screenshot08.jpg</screenshot>
        </assets>
	</extension>
</addon>
