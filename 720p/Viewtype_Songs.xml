<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="Viewtype_Songs">
		
		<control type="group">
           
			<visible>Control.IsVisible(503)</visible>
            <animation type="TYPE" condition="Window.IsVisible(135)" reversible="false">
                <effect type="slide" end="-1500,0" time="200" />
            </animation>
            <animation type="TYPE" condition="!Window.IsVisible(135)" reversible="false">
                <effect type="slide" start="-1500,0" time="200" />
            </animation>
            <!-- This Control displays the background behind the track title-->
			<control type="image">
                <posx>420</posx>
                <posy>290</posy>
                <width>685</width>
                <height>315</height>
                <texture>music_fanart_diffuse.png</texture>
             </control>
			<!-- This Control displays the background behind the track rating-->
			<control type="image">
                <posx>1120</posx>
                <posy>290</posy>
                <width>140</width>
                <height>315</height>
                <texture>other_textures/black-back.png</texture>
             </control>
			<!-- This Control displays the background behind the track number-->
			<control type="image">
                <posx>370</posx>
                <posy>290</posy>
                <width>45</width>
                <height>315</height>
                <texture>other_textures/black-back.png</texture>
            </control>
			
			<!-- This Control displays the list of songs-->
            <control type="fixedlist" id="503">
                <viewtype label="Song View">Song View</viewtype>
				<posx>370</posx>
                <posy>290</posy>
                <width>890</width>
                <height>315</height>
				<movement>3</movement>
				<focusposition>3</focusposition>
                <onup>503</onup>
                <ondown>503</ondown>
                <onright>1</onright>
                <onleft>9000</onleft>
                <scrolltime>0</scrolltime>
                <orientation>vertical</orientation>
				<visible>Container.Content(songs) | Window.IsActive(musicplaylist)</visible>
				<pagecontrol>63</pagecontrol>
                <!-- This Control defines the unfocused item layout -->
				<itemlayout height="45">
                    <!-- This Control displays the Track Number-->
					<control type="label">
                        <posx>22</posx>
                        <width>45</width>
						<font>List_Unfocused</font>
                        <align>center</align>
                        <label>$INFO[ListItem.TrackNumber]</label>
                    </control>
					<!-- This Control displays the Track Title-->
                    <control type="label">
                        <posx>65</posx>
                        <width>645</width>
						<font>List_Unfocused</font>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
					<control type="label">
                        <posx>65</posx>
                        <width>730</width>
						<font>List_Unfocused</font>
                        <label>$INFO[ListItem.Label]</label>
						<visible>StringCompare(ListItem.Label,..)</visible>
					</control>
                    <!-- This Control displays the Track Rating-->
					<control type="image">
                        <posx>770</posx>
                        <posy>10</posy>
                        <width>100</width>
                        <height>25</height>
						<texture>other_textures/colorrating/$INFO[ListItem.StarRating]</texture>
                    </control>
                    <!-- This Control displays the Track Duration-->
					<control type="label">
                        <posx>715</posx>
                        <align>right</align>
                        <width>100</width>
						<font>List_Unfocused</font>
                        <label>$INFO[ListItem.Duration]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="45">
                    <!-- This Control displays the Focused Track Title Highlighted Bg-->
					<control type="image">
                        <posx>50</posx>
						<width>685</width>
                        <height>45</height>
                        <texture>button.png</texture>
                    </control>
					<control type="image">
                        <width>45</width>
                        <height>45</height>
                        <texture>button.png</texture>
                    </control>
					<control type="image">
					     <posx>750</posx>
                        <width>140</width>
                        <height>45</height>
                        <texture>button.png</texture>
                    </control>
                    <!-- This Control displays the Focused Track Nr Highlighted Bg-->
					<control type="image">
                        <width>45</width>
                        <height>45</height>
                        <texture border="5">tile.png</texture>
                    </control>
					<control type="image">
                        <posx>750</posx>
						<width>140</width>
                        <height>45</height>
                        <texture border="5">tile.png</texture>
                    </control>
					<!-- This Control displays the Focused Track Nr-->
                    <control type="label">
                        <posx>22</posx>
                        <width>45</width>
                        <align>center</align>
						<font>List_Focused</font>
                        <label>$INFO[ListItem.TrackNumber]</label>
                    </control>
                    <!-- This Control displays the Focused Track Title-->
					<control type="label">
                        <posx>65</posx>
                        <width>645</width>
						<font>List_Focused</font>
                        <label>$INFO[ListItem.Title]</label>
					</control>
						<control type="label">
                        <posx>65</posx>
                        <width>730</width>
						<font>List_Focused</font>
                        <label>$INFO[ListItem.Label]</label>
						<visible>StringCompare(ListItem.Label,..)</visible>
                    </control>
                    <!-- This Control displays the Focused Track Rating-->
					<control type="image">
                        <posx>770</posx>
                        <posy>10</posy>
                        <width>100</width>
                        <height>25</height>
						<texture>other_textures/colorrating/$INFO[ListItem.StarRating]</texture>
                    </control>
                    <!-- This Control displays the Focused Track Duration-->
					<control type="label">
                        <posx>715</posx>
                        <align>right</align>
                        <width>100</width>
						<font>List_Focused</font>
                        <label>$INFO[ListItem.Duration]</label>
                    </control>
                </focusedlayout>
            </control>
            <!-- This Control displays the scrollbar managing the song list-->
			<control type="scrollbar" id="63">
                <posx>1110</posx>
                <posy>290</posy>
                <width>5</width>
                <height>315</height>
                <texturesliderbackground></texturesliderbackground>
                <textureslidernib>bar.png</textureslidernib>
                <textureslidernibfocus>scroll_nib.png</textureslidernibfocus>
                <texturesliderbar></texturesliderbar>
                <texturesliderbarfocus></texturesliderbarfocus>
                <showonepage>true</showonepage>
                <orientation>vertical</orientation>
            </control>

            <!-- This Control displays the Album Title-->
			<control type="label">
                <label>$INFO[ListItem.Album]</label>
                <posx>50</posx>
                <posy>215</posy>
                <height>30</height>
                <width>885</width>
                <font>Panel_Title</font>
                <scroll>true</scroll>
                <scrollout>false</scrollout>
                <pauseatend>600</pauseatend>
                <scrollspeed>50</scrollspeed>
                <aligny>top</aligny>
            </control>
			<!-- This Control displays the Album Year-->
			<control type="label">
                <label>[COLOR Accent]$INFO[ListItem.Year][/COLOR]</label>
                <posx>1145</posx>
                <posy>215</posy>
                <height>30</height>
                <width>100</width>
                <font>Panel_Title</font>
                <scroll>true</scroll>
                <scrollout>false</scrollout>
                <pauseatend>600</pauseatend>
                <scrollspeed>50</scrollspeed>
                <aligny>top</aligny>
				<align>left</align>
            </control>
            <!-- This Control displays the Album Artists-->
			<control type="label">
                <posx>50</posx>
                <posy>610</posy>
                <width>600</width>
                <height>50</height>
                <align>left</align>
				<aligny>top</aligny>
                <font>Panel_Title_Footer</font>
                <label>$INFO[ListItem.Artist]</label>
            </control>
            <!-- This Control displays a white background behind the album poster-->
			<control type="image">
                <posx>50</posx>
                <posy>290</posy>
                <width>315</width>
                <height>315</height>
                <texture>white_box.png</texture>
                <aspectratio>stretch</aspectratio>
             </control>
			 <control type="image">
                <posx>50</posx>
                <posy>290</posy>
                <width>315</width>
                <height>315</height>
                <texture>button.png</texture>
                <aspectratio>stretch</aspectratio>
                <visible>true</visible>
                <bordersize>5</bordersize>
				<visible>StringCompare(ListItem.Label,..)</visible>
            </control>
			 <control type="image">
                <posx>50</posx>
                <posy>290</posy>
                <width>315</width>
                <height>315</height>
                <texture>tile.png</texture>
                <aspectratio>stretch</aspectratio>
                <visible>true</visible>
                <bordersize>5</bordersize>
				<visible>StringCompare(ListItem.Label,..)</visible>
            </control>
            <!-- This Control displays  the album poster-->
			<control type="image">
                <posx>50</posx>
                <posy>290</posy>
                <width>315</width>
                <height>315</height>
                <texture>$INFO[ListItem.Icon]</texture>
                <aspectratio>stretch</aspectratio>
                <visible>true</visible>
                <bordersize>5</bordersize>
            </control>
       


		</control>
    </include>
</includes>