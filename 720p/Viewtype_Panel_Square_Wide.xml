<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="Viewtype_Panel_Square_Wide">
       <control type="group">
            <visible>Control.IsVisible(521)</visible>
            <animation type="TYPE" condition="Window.IsVisible(2001)" reversible="false">
                <effect type="slide" end="-1500,0" time="200" />
            </animation>
            <animation type="TYPE" condition="!Window.IsVisible(2001)" reversible="false">
                <effect type="slide" start="-1500,0" time="200" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
			
				<!-- This Control defines the Albums Panel-->
				<control type="panel" id="521">
					<viewtype label="Thumb">icon</viewtype>
					<posx>370</posx>
					<posy>290</posy>
					<width>880</width>
					<height>320</height>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<onleft>9000</onleft>
					<onright>left</onright>
					<onright>left</onright>
					<onright>left</onright>
					<onright>left</onright>
					<onright>left</onright>
					<onright>right</onright>
					<onright>down</onright>
					<pagecontrol>61</pagecontrol>
					<preloaditems>2</preloaditems>
					<visible>Window.IsActive(1) | Container.Content(Albums)</visible>
					 <!-- This Control defines the unfocius layout of the panel items-->
					<itemlayout width="80" height="80">
						<control type="image">
							<posx></posx>
							<posy></posy>
							<width>75</width>
							<height>75</height>
							<texture background="true">tile.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
						<control type="image">
							<posx></posx>
							<posy></posy>
							<width>75</width>
							<height>75</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<colordiffuse>ImageDiffuse</colordiffuse>
							<bordersize>5</bordersize>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
					</itemlayout>
					 <!-- This Control defines the focused layout of the panel items-->
					<focusedlayout width="80" height="80">
						<control type="image">
							<posx></posx>
							<posy></posy>
							<width>75</width>
							<height>75</height>
							<texture background="true">button.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
						<control type="image">
							<posx></posx>
							<posy></posy>
							<width>75</width>
							<height>75</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<bordersize>5</bordersize>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
					</focusedlayout>
				</control>
			<!-- This Control display a white box behind the main big album poster-->
			<control type="image">
                <posx>50</posx>
                <posy>290</posy>
                <width>315</width>
                <height>315</height>
                <texture>white_box.png</texture>
                <fadetime>200</fadetime>
                <aspectratio scalediffuse="false">stretch</aspectratio>
                <visible>!StringCompare(ListItem.Album, )</visible>
            </control>
			<!-- This Control display a  the main big album poster-->
            <control type="image">
                <posx>50</posx>
                <posy>290</posy>
                <width>315</width>
                <height>315</height>
                <texture>$INFO[ListItem.Icon]</texture>
                <fadetime>200</fadetime>
                <aspectratio scalediffuse="false">stretch</aspectratio>
                <visible>true</visible>
                <bordersize>5</bordersize>
            </control>
            <!-- This Control defines the scrollbar managing the Albums panel-->
			<control type="scrollbar" id="61">
                <posx>1250</posx>
                <posy>290</posy>
                <width>5</width>
                <height>315</height>
                <texturesliderbackground></texturesliderbackground>
                <textureslidernib>bar.png</textureslidernib>
                <textureslidernibfocus>scroll_nib.png</textureslidernibfocus>
                <texturesliderbar></texturesliderbar>
                <texturesliderbarfocus></texturesliderbarfocus>
                <showonepage>true</showonepage>
                <orientation>vertical</orientation>
            </control>
            <!-- This Control displays the Name of the Album on Top of the Main Poster-->
			<control type="label">
                <label>$INFO[ListItem.Album] [COLOR Accent]$INFO[ListItem.Year][/COLOR] </label>
                <posx>50</posx>
                <posy>215</posy>
                <height>30</height>
                <width>900</width>
				<aligny>top</aligny>
                <font>Panel_Title</font>
                <align>left</align>
                <visible>Container.Content(Albums)</visible>
            </control>
			<!-- This Control displays the Name of the Artist Currently Selected below the Main Poster-->
			<control type="label" id="144">
                <posx>50</posx>
                <posy>610</posy>
                <width>465</width>
                <height>50</height>
                <font>Panel_Title_Footer</font>
                <scroll>true</scroll>
                <scrollout>false</scrollout>
                <pauseatend>600</pauseatend>
                <scrollspeed>50</scrollspeed>
                <label>$INFO[ListItem.Artist]</label>
                <visible>Container.Content(albums)</visible>
            </control>


            <control type="label">
                <posx>796</posx>
                <posy>320</posy>
                <width>485</width>
                <height>50</height>
                <align>center</align>
                <aligny>top</aligny>
                <font>Large_Letter_Music</font>
                <textcolor>White</textcolor>
                <label>$INFO[ListItem.SortLetter]</label>
                <animation effect="fade" time="500">VisibleChange</animation>
                <visible>Container.Scrolling + !container.content(songs)</visible>
            </control>
        </control>
    </include>
</includes>