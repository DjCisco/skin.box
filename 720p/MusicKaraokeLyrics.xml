<!-- Foundation -->
<window id="2009">

	<controls>

		<control type="karvisualisation" id="1">
			<description>visualisation</description>
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<visible>true</visible>
		</control>

		<control type="image" id="2">
			<description>fullscreen image</description>
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<visible>false</visible>
		</control>

		<control type="group">
			<left>400</left>
			<top>0</top>
			<visible>MusicPlayer.Offset(number).Exists + !IntegerGreaterThan(Player.TimeRemaining,20)</visible>

			<control type="image">
				<left>0</left>
				<top>-20</top>
				<width>480</width>
				<height>78</height>
				<texture border="22">backings/key-back1.png</texture>
			</control>

			<control type="label" id="402">
				<description>Next Song Name</description>
				<left>20</left>
				<width>420</width>
				<label>[COLOR=Accent]$LOCALIZE[209] :[/COLOR] $INFO[MusicPlayer.offset(1).Title]</label>
			</control>

		</control>

	</controls>

</window>
