<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_50_List">
        <control type="group">
            <visible>Control.IsVisible(50)</visible>
            <animation type="TYPE" condition="Window.IsVisible(2001) | Window.IsVisible(139) | Window.IsVisible(136) | Window.IsVisible(135) | Window.IsVisible(addonsettings)" reversible="false">
                <effect type="slide" end="-1500,0" time="200" />
            </animation>
            <animation type="TYPE" condition="!Window.IsVisible(2001) + !Window.IsVisible(139) + !Window.IsVisible(136) + !Window.IsVisible(135) + !Window.IsVisible(addonsettings)" reversible="false">
                <effect type="slide" start="-1500,0" time="200" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
			
            <!--This control shows the label of the folder name -->
			<control type="label">
                <label>$INFO[Container.FolderName]</label>
                <left>50</left>
                <top>215</top>
                <height>30</height>
                <width>884</width>
                <font>Panel_Title</font>
				<aligny>top</aligny>
				<align>left</align>
            </control>
		<!-- Group Displaying elements for Large List-->
			<control type="group">
				<!--This control displays  larger background behind the item list -->
				<control type="image">
					<left>370</left>
					<top>290</top>
					<width>880</width>
					<height>315</height>
					<texture background="true">music_fanart_diffuse.png</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
				</control>
				<!--This control defines the scrollbar controlling the large list list -->
				<control type="scrollbar" id="60">
					<left>1255</left>
					<top>290</top>
					<width>5</width>
					<height>315</height>
					<onleft>50</onleft>
					<orientation>vertical</orientation>
				</control>
			</control>
			<!--This control shows the label in case no Folder Name is Available -->
			<control type="group">
				<visible>IsEmpty(Container.FolderName)</visible>
				<!--This control shows the label Videos -->
				<control type="label">
					<label>VIDEOS</label>
					<left>50</left>
					<top>215</top>
					<height>30</height>
					<width>884</width>
					<font>Panel_Title</font>
					<aligny>top</aligny>
					<align>left</align>
					<visible>!Window.IsVisible(Pictures) + !Window.IsVisible(Programs) + !Window.IsActive(musicfiles) + !Window.IsActive(musiclibrary) + !Window.IsActive(addonBrowser)</visible>
				</control>
				 <!--This control shows the label MUSIC -->
				<control type="label">
					<include>ViewMainTitle</include>
					<label>MUSIC</label>
					<visible>Window.IsActive(musiclibrary)</visible>
				</control>
				<!--This control shows the label MUSIC FILES -->
				<control type="label">
					<include>ViewMainTitle</include>
					<label>MUSIC FILES</label>
					<visible>Window.IsActive(musicfiles)</visible>
				</control>
				<!--This control shows the label Programs -->
				<control type="label">
					<include>ViewMainTitle</include>
					<label>PROGRAMS</label>
					<visible>Window.IsActive(Programs)</visible>
				</control>
				<!--This control shows the label Pictures -->
				<control type="label">
					<include>ViewMainTitle</include>
					<label>$LOCALIZE[1]</label>
					<visible>Window.IsActive(Pictures)</visible>
				</control>
				<!--This control shows the Add-On label -->
				<control type="label">
					<include>ViewMainTitle</include>
					<label>ADD-ONS</label>
					<visible>Window.IsActive(AddonBrowser)</visible>
				</control>
			</control>	
			<!--This control defines the list that will display the items -->
			<control type="list" id="50">
                <!--<visible>!Container.Content(artists) + !Container.Content(episodes) + !Container.Content(tvshows) + !Container.Content(movies) + !Container.Content(seasons) + !Container.Content(genres) + !Container.Content(songs) + !Container.Content(albums) + !Container.Content(musicvideos) + !Container.Content(years)</visible>-->
                <visible>![[Window.IsVisible(videolibrary) | Window.IsVisible(musiclibrary)] + [Container.Content(addons) | IsEmpty(Container.FolderName) | StringCompare(Container.FolderPath,videodb://movies/) | StringCompare(Container.FolderPath,library://video/movies/) | StringCompare(Container.FolderPath,videodb://tvshows/) | StringCompare(Container.FolderPath,library://video/tvshows/) | StringCompare(Container.FolderPath,videodb://musicvideos/) | StringCompare(Container.FolderPath,library://video/musicvideos/)]] + !Container.Content(artists) + !Container.Content(episodes) + !Container.Content(tvshows) + !Container.Content(movies) + !Container.Content(seasons) + !Container.Content(genres) + !Container.Content(songs) + !Container.Content(albums) + !Container.Content(musicvideos) + !Container.Content(years) + ![Window.IsActive(Pictures) + !IsEmpty(Container.FolderName)] + ![Window.IsActive(addonbrowser) + !IsEmpty(Container.FolderName)]</visible>
               	<left>370</left>
                <top>290</top>
                <width>880</width>
                <height>315</height>
                <onleft>9000</onleft>
				<onright>60</onright>
                <onup>50</onup>
                <ondown>50</ondown>
                <pagecontrol>60</pagecontrol>
                <viewtype label="List">List</viewtype>
                <scrolltime>200</scrolltime>
                <itemlayout width="880" height="45">
					<control type="label">
						<left>10</left>
						<width>860</width>
						<font>List_Unfocused</font>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout width="880" height="45">
					<control type="image">
						<width>880</width>
						<height>45</height>
						<texture border="2">button.png</texture>
						<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(50)">Conditional</animation>
					</control>
					<control type="label">
						<left>10</left>
						<width>860</width>
						<font>List_Focused</font>
						<label>$INFO[ListItem.Label]</label>
						<selectedcolor>White</selectedcolor>
					</control>
				</focusedlayout>
			</control>
			<include>ArtistAlbumPanelCover</include>
		</control>
    </include>
</includes>