<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="Viewtype_Artist_Albums">
        <control type="group">
            <visible>Control.IsVisible(529)</visible>
            <visible>SubString(Container.FolderPath, albumartistsonly) + Container.Content(albums)</visible>
            <animation type="TYPE" condition="Window.IsVisible(2001)" reversible="false">
                <effect type="slide" end="-1500,0" time="200" />
            </animation>
            <animation type="TYPE" condition="!Window.IsVisible(2001)" reversible="false">
                <effect type="slide" start="-1500,0" time="200" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
            <animation effect="fade" time="300">WindowOpen</animation>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
            </animation>
		    <control type="fixedlist" id="529">
                <viewtype label="Cover">Artist Albums View</viewtype>
				<visible>SubString(Container.FolderPath, albumartistsonly) + Container.Content(albums)</visible>
                <left>50</left>
                <top>290</top>
                <width>1230</width>
                <height>390</height>
                <scrolltime>500</scrolltime>
                <orientation>horizontal</orientation>
                <onup>9000</onup>
				<preloaditems>2</preloaditems>
                <itemlayout width="325" height="315">
				    <control type="image">
                        <width>315</width>
                        <height>315</height>
                        <texture>tile.png</texture>
                        <aspectratio scalediffuse="false">stretch</aspectratio>
                    </control>
					<control type="image">
                        <width>315</width>
                        <height>315</height>
                        <texture>$INFO[ListItem.Thumb]</texture>
						<colordiffuse>33FFFFFF</colordiffuse>
						<aspectratio scalediffuse="false">scale</aspectratio>
                        <bordersize>5</bordersize>
					</control>
					<control type="image">
                        <width>315</width>
                        <height>315</height>
                        <texture>$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
                        <bordersize>35</bordersize>
						<visible>IsEmpty(ListItem.Thumb)</visible>
					</control>
					<control type="image">
                        <width>315</width>
                        <height>315</height>
                        <texture>music_fanart_diffuse.png</texture>
						<bordersize>5</bordersize>
						<visible>!StringCompare(ListItem.Label,* ALL ALBUMS) + !StringCompare(ListItem.Label,..)</visible>
                     </control>
				</itemlayout>
                <focusedlayout width="325" height="315">
					<control type="image">
                       <width>315</width>
                        <height>315</height>
                        <texture>button.png</texture>
                        <aspectratio scalediffuse="false">stretch</aspectratio>
                    </control>
					<control type="image">
                        <width>315</width>
                        <height>315</height>
                        <texture>tile.png</texture>
						<bordersize>5</bordersize>
                        <aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>StringCompare(ListItem.Label,* ALL ALBUMS) | StringCompare(ListItem.Label,..) </visible>
                    </control>
					<control type="image">
                        <width>315</width>
                        <height>315</height>
                        <texture>$INFO[ListItem.Thumb]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
                        <bordersize>5</bordersize>
					</control>
					<control type="image">
                        <width>315</width>
                        <height>315</height>
                        <texture>$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
                        <bordersize>35</bordersize>
						<visible>IsEmpty(ListItem.Thumb)</visible>
					</control>
                </focusedlayout>
            
			
			
			</control>
			
			 <!-- This Control displays the Name of the Album on Top of the Main Poster-->
			<control type="label">
                <label>$INFO[ListItem.Album] [COLOR=Accent]$INFO[ListItem.Year][/COLOR]</label>
                <left>50</left>
                <top>215</top>
                <height>30</height>
                <width>1000</width>
				<aligny>top</aligny>
                <font>Panel_Title</font>
                <align>left</align>
                <visible>Container.Content(Albums)</visible>
            </control>
			
			<control type="label">
                <label>ALL</label>
                <left>50</left>
                <top>215</top>
                <height>30</height>
                <width>1000</width>
				<aligny>top</aligny>
                <font>Panel_Title</font>
                <align>left</align>
                <visible>StringCompare(ListItem.Label,* ALL ALBUMS)</visible>
            </control>
			
			<control type="label">
                <label>BACK</label>
                <left>50</left>
                <top>215</top>
                <height>30</height>
                <width>1000</width>
				<aligny>top</aligny>
                <font>Panel_Title</font>
                <align>left</align>
                <visible>StringCompare(ListItem.Label,..)</visible>
            </control>
			
			<control type="label" id="144">
                <left>50</left>
                <top>610</top>
                <width>465</width>
                <height>50</height>
                <font>Panel_Title_Footer</font>
                <scroll>true</scroll>
                <scrollout>false</scrollout>
                <pauseatend>600</pauseatend>
                <scrollspeed>50</scrollspeed>
                <label>$INFO[ListItem.Artist]</label>
                <visible>Container.Content(albums)</visible>
            </control>
			
			
        </control>
    </include>
</includes>