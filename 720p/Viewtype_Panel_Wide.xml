<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="Viewtype_Panel_Wide">
        <control type="group">
            <visible>Control.IsVisible(530)</visible>
            <animation type="TYPE" condition="Window.IsVisible(2003)" reversible="false">
                <effect type="slide" end="-1500,0" time="200" />
            </animation>
            <animation type="TYPE" condition="!Window.IsVisible(2003)" reversible="false">
                <effect type="slide" start="-1500,0" time="200" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
            <animation effect="fade" time="300">WindowOpen</animation>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
            </animation>
			
            <control type="panel" id="530">
                <viewtype label="Panel">Wide_Panel</viewtype>
                <posx>50</posx>
				<posy>290</posy>
				<width>1200</width>
				<height>320</height>
				<scrolltime>200</scrolltime>
                <orientation>vertical</orientation>
                <onright>56</onright>
                <onleft>9000</onleft>
                <pagecontrol>62</pagecontrol>
                <preloaditems>2</preloaditems>
                <visible>stringCompare(Container.FolderName,Music Videos) | stringCompare(Container.FolderName,Tv Shows) | stringCompare(Container.FolderName,Movies) | [IsEmpty(Container.FolderName) + [!Window.IsVisible(AddonBrowser.xml) + !Window.IsVisible(Pictures) + !Window.IsVisible(Programs)]]</visible>
                <itemlayout width="300" height="160">
                    <control type="image">
						<include>PanelWideButtonImageNF</include>
                    </control>
                    <control type="label">
                        <label>$INFO[ListItem.Label]</label>
						<include>PanelWideButtonTitle</include>
                    </control>
					<control type="image">
                        <include>PanelWideButtonIcon</include>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
                </itemlayout>
                <focusedlayout width="300" height="160">
                    <control type="image">
                        <include>PanelWideButtonImageFO</include>
                    </control>
                    <control type="image">
                        <include>PanelWideButtonIcon</include>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
                    <control type="label">
                        <label>$INFO[ListItem.Label]</label>
						<include>PanelWideButtonTitle</include>
					</control>
                </focusedlayout>
            </control>
			
			
			
			<control type="label">
				<include>ViewMainTitle</include>
                <label>MUSIC</label>
				<visible>Window.IsActive(musiclibrary)</visible>
			</control>
							
			<control type="label">
				<include>ViewMainTitle</include>
                <label>$INFO[Container.FolderName]</label>
            </control>
			
			<!--This control shows the label Videos -->
			<control type="label">
                <label>VIDEOS</label>
                <posx>50</posx>
                <posy>215</posy>
                <height>30</height>
                <width>884</width>
                <font>Panel_Title</font>
				<aligny>top</aligny>
				<align>left</align>
                <visible>IsEmpty(Container.FolderName) + [!Window.IsActive(addonbrowser) + !Window.IsActive(Pictures) + !Window.IsActive(Programs) + !Window.IsActive(musicfiles] + !Window.IsActive(musiclibrary)</visible>
            </control>
			
			
			     
         </control>
    </include>
</includes>