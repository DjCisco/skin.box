				<left>0</left>
				<top>25</top>
				<width>25</width>
				<height>45</height>
				<texture>tile.png</texture>
			</control>
			<control type="image">
				<left>-15</left>
				<top>20</top>
				<width>55</width>
				<height>55</height>
				<texture flipx="true">icons/music.png</texture>
			</control>
		</control>

	</control>			
