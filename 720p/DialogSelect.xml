<?xml version="1.0" encoding="utf-8"?>
<window id="2000">
    <defaultcontrol always="true">3</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <include>GlobalOverlay</include>
        <control type="group">
            <posx>960</posx>
            <posy>0</posy>
            <animation type="WindowOpen">
                <effect type="slide" time="300" start="+320, 0" end="0,0" easing="out" tween="cubic" />
            </animation>
            <animation type="WindowClose">
                <effect type="slide" time="300" start="0,0" end="+320,0" easing="in" tween="cubic" />
            </animation>
            <control type="image">
                <description>Large Icon Image</description>
                <posx>-765</posx>
                <posy>110</posy>
                <width>650</width>
                <height>500</height>
                <texture fallback="defaultaddonnone.png">$INFO[Container(3).ListItem.Icon]</texture>
                <aspectratio align="center" aligny="center">keep</aspectratio>
                <bordertexture border="5">white_box.png</bordertexture>
                <bordersize>5</bordersize>
                <visible>!IsEmpty(Container(3).ListItem(0).Icon)</visible>
                <animation type="WindowOpen">
                    <effect type="slide" time="300" start="+1165, 0" end="0,0" easing="out" tween="cubic" />
                </animation>
                <animation type="WindowClose">
                    <effect type="slide" time="300" start="0,0" end="+1165,0" easing="in" tween="cubic" />
                </animation>
            </control>
            <include>RightMenuBackground</include>
			<control type="fadelabel" id="1">
                <description>header label</description>
                <posx>20</posx>
                <posy>0</posy>
                <width>280</width>
                <font>Panel_Description_Title</font>
                <align>right</align>
                <label>$LOCALIZE[13406]</label>
            </control>
            <control type="list" id="3">
                <posx>20</posx>
                <posy>70</posy>
                <width>340</width>
                <height>540</height>
                <itemgap></itemgap>
				<onright>5</onright>
				<onup>3</onup>
                <ondown>3</ondown>
                <itemlayout height="45">
                    <control type="label">
                        <posx>270</posx>
                        <width>260</width>
                        <label>$INFO[ListItem.Label] $INFO[ListItem.Label2]</label>
                        <font>Panel_Info</font>
                        <align>right</align>
                    </control>
                </itemlayout>
                <focusedlayout height="45">
                    <control type="image">
                        <width>280</width>
                        <height>45</height>
                        <texture>button.png</texture>
                        <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(3)">Conditional</animation>
                    </control>
                    <control type="label">
                        <posx>270</posx>
                        <width>260</width>
                        <label>$INFO[ListItem.Label] $INFO[ListItem.Label2]</label>
						<font>Panel_Info</font>
                        <align>right</align>
                    </control>
                </focusedlayout>
            </control>
            <control type="label" id="2">
                <description>Number Of Files</description>
                <posx>20</posx>
                <posy>50</posy>
                <width>180</width>
                <align>center</align>
                <font>Panel_Info</font>
                <label></label>
            </control>
            <control type="button" id="5">
                <description>Manual</description>
                <posx>140</posx>
                <posy>655</posy>
                <width>160</width>
                <label>368</label>
                <onleft>3</onleft>
                <onup>3</onup>
                <ondown>3</ondown>
				<font>Panel_Hint</font>
				<texturefocus>button.png</texturefocus>
				<texturenofocus>tile.png</texturenofocus>
            </control>
        </control>
    </controls>
</window>