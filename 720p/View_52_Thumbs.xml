<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_52_Thumbs">
        <control type="group">
            <visible>Control.IsVisible(52)</visible>
            <animation type="TYPE" condition="Window.IsVisible(2001) | Window.IsVisible(139) | Window.IsVisible(136 | Window.IsVisible(addonsettings)" reversible="false">
                <effect type="slide" end="-1500,0" time="200" />
            </animation>
            <animation type="TYPE" condition="!Window.IsVisible(2001) + !Window.IsVisible(139) + !Window.IsVisible(136) + !Window.IsVisible(addonsettings)" reversible="false">
                <effect type="slide" start="-1500,0" time="200" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
            <!--This control shows the label of the folder name -->
			<control type="label">
				<include>ViewMainTitle</include>	
                <label>$INFO[Container.FolderName]</label>
            </control>
			 <!--This control shows the label of the folder name -->
			<control type="label">
				<include>ViewFooterTitle</include>	
                <label>$INFO[ListItem.Title]</label>
            </control>
			<!--This control defines the list that will display the items -->
			<control type="panel" id="52">
                <visible>SubString(Container.FolderPath,plugin://) | [Container.Content(files) + !StringCompare(Container.FolderPath,videodb://1/) + !StringCompare(Container.FolderPath,library://video/movies/) + !StringCompare(Container.FolderPath,videodb://2/) + !StringCompare(Container.FolderPath,library://video/tvshows/) + !StringCompare(Container.FolderPath,videodb://3/)] + !StringCompare(Container.FolderPath,library://video/musicvideos/)]</visible>
				<posx>50</posx>
                <posy>290</posy>
                <width>1200</width>
                <height>320</height>
                <onleft>9000</onleft>
                <onup>noop</onup>
                <ondown>noop</ondown>
                <pagecontrol>60</pagecontrol>
                <viewtype label="Thumbs">Thumbs</viewtype>
                <scrolltime>200</scrolltime>
                <itemlayout width="240" height="160">
					<control type="image">
						<width>235</width>
						<height>155</height>
						<texture>tile.png</texture>
						<visible>IsEmpty(ListItem.thumb)</visible>
					</control>
					<control type="image">
						<width>235</width>
						<height>155</height>
						<texture>$INFO[ListItem.icon]</texture>
						<aspectratio>keep</aspectratio>
						<bordersize>35</bordersize>
						<visible>IsEmpty(ListItem.thumb)</visible>
					</control>
					<control type="image">
						<width>235</width>
						<height>155</height>
						<texture>$INFO[ListItem.thumb]</texture>
						<bordertexture>tile.png</bordertexture>
						<bordersize>5</bordersize>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="image">
						<width>235</width>
						<height>155</height>
						<texture>music_fanart_diffuse.png</texture>
						<visible>!IsEmpty(ListItem.thumb)</visible>
					</control>
					<control type="label">
						<label>$INFO[ListItem.Label]</label>
						<posx>10</posx>
						<posy>120</posy>
						<height>30</height>
						<width>215</width>
						<font>List_Hint</font>
						<visible>!StringCompare(ListItem.label,..)</visible>
					</control>
					<control type="label">
						<label>$INFO[ListItem.Duration,, MIN]</label>
						<posx>225</posx>
						<posy>5</posy>
						<height>30</height>
						<width>145</width>
						<font>List_Hint</font>
						<align>right</align>
					</control>

				</itemlayout>
				<focusedlayout width="240" height="160">
					<control type="image">
						<width>235</width>
						<height>155</height>
						<texture>tile.png</texture>
						<bordertexture>button.png</bordertexture>
						<bordersize>5</bordersize>
						<visible>IsEmpty(ListItem.thumb)</visible>
					</control>
					<control type="image">
						<width>235</width>
						<height>155</height>
						<texture>$INFO[ListItem.icon]</texture>
						<aspectratio>keep</aspectratio>
						<bordersize>35</bordersize>
						<visible>IsEmpty(ListItem.thumb)</visible>
					</control>
					<control type="image">
						<width>235</width>
						<height>155</height>
						<texture>$INFO[ListItem.thumb]</texture>
						<bordertexture>button.png</bordertexture>
						<bordersize>5</bordersize>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>120</posy>
						<width>225</width>
						<height>30</height>
						<texture>tile.png</texture>
						<visible>!StringCompare(ListItem.label,..) + !IsEmpty(ListItem.thumb)</visible>
					</control>
					<control type="label">
						<label>$INFO[ListItem.Label]</label>
						<posx>10</posx>
						<posy>120</posy>
						<height>30</height>
						<width>215</width>
						<font>List_Hint</font>
						<visible>!StringCompare(ListItem.label,..)</visible>
					</control>
					<control type="label">
						<label>$INFO[ListItem.Duration,, MIN]</label>
						<posx>225</posx>
						<posy>5</posy>
						<height>30</height>
						<width>145</width>
						<font>List_Hint</font>
						<align>right</align>
					</control>
				
				</focusedlayout>
			</control>
			<!--This control defines the scrollbar controlling the large list list -->
				<control type="scrollbar" id="60">
					<posx>1250</posx>
					<posy>290</posy>
					<width>5</width>
					<height>315</height>
					<texturesliderbackground></texturesliderbackground>
					<textureslidernib>bar.png</textureslidernib>
					<textureslidernibfocus>scroll_nib.png</textureslidernibfocus>
					<texturesliderbar></texturesliderbar>
					<texturesliderbarfocus></texturesliderbarfocus>
					<showonepage>true</showonepage>
					<orientation>vertical</orientation>
				</control>
				
				
		</control>
    </include>
</includes>