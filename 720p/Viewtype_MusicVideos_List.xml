<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="Viewtype_MusicVideos_List">
        <control type="group">
            <visible>Control.IsVisible(590)</visible>
            <description>Music Videos List View (id=590)</description>
            <visible>Container.Content(musicvideos)</visible>
            <animation type="TYPE" condition="Window.IsVisible(2003)" reversible="false">
                <effect type="slide" end="-1500,0" time="200" />
            </animation>
            <animation type="TYPE" condition="!Window.IsVisible(2003)" reversible="false">
                <effect type="slide" start="-1500,0" time="200" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
			<!-- This Control displays the background behind the track title-->
			<control type="image">
                <posx>370</posx>
                <posy>290</posy>
                <width>735</width>
                <height>315</height>
                <texture>music_fanart_diffuse.png</texture>
             </control>
			<!-- This Control displays the background behind the Video rating-->
			<control type="image">
                <posx>1120</posx>
                <posy>290</posy>
                <width>140</width>
                <height>315</height>
                <texture>other_textures/black-back.png</texture>
             </control>
			<control type="list" id="590">
                <posx>370</posx>
                <posy>290</posy>
                <width>890</width>
                <height>315</height>
                <scrolltime>200</scrolltime>
                <onup>590</onup>
                <ondown>590</ondown>
                <onright>left</onright>
                <onright>left</onright>
                <onright>left</onright>
                <onright>right</onright>
                <onright>down</onright>
                <onleft>9000</onleft>
                <viewtype label="List">Music Videos List View</viewtype>
                <orientation>vertical</orientation>
                <focusposition>4</focusposition>
                <pagecontrol>63</pagecontrol>
                <visible>Container.Content(musicvideos)</visible>
                <itemlayout height="42">
                    <!-- This Control displays the Track Title-->
                    <control type="label">
                        <posx>10</posx>
                        <width>730</width>
						<font>List_Unfocused</font>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
					<control type="label">
                        <posx>10</posx>
                        <width>730</width>
						<font>List_Unfocused</font>
                        <label>$INFO[ListItem.Label]</label>
						<visible>StringCompare(ListItem.Label,..)</visible>
					</control>
					<control type="label">
                        <posx>820</posx>
						<width>140</width>
						<font>List_Unfocused</font>
						<align>center</align>
                        <label>$INFO[ListItem.Year]</label>
					</control>
                   	<control type="image">
                        <posx>700</posx>
                        <posy>13</posy>
                        <width>18</width>
                        <height>15</height>
                        <texture>watchedpanel.png</texture>
                        <visible>stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
                    </control>
                    <control type="image">
                        <posx>700</posx>
                        <posy>13</posy>
                        <width>18</width>
                        <height>15</height>
                        <texture>watchingpanel.png</texture>
                        <visible>ListItem.IsResumable + !stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
                    </control>
				</itemlayout>
                <focusedlayout height="63">
					<control type="image">
						<width>735</width>
						<height>63</height>
						<texture>button.png</texture>
					 </control>
					<control type="image">
						<width>735</width>
						<posy>30</posy>
						<height>33</height>
						<texture>tile.png</texture>
					 </control>
					<control type="image">
						<posx>750</posx>
						<width>140</width>
						<height>63</height>
						<texture>button.png</texture>
					 </control>
					<control type="image">
						<width>140</width>
						<posx>750</posx>
						<posy>30</posy>
						<height>33</height>
						<texture>tile.png</texture>
					 </control>
					<control type="label">
							<posx>10</posx>
							<width>700</width>
							<height>30</height>
							<font>List_Focused</font>
							<selectedcolor>White</selectedcolor>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Title]</label>
						</control>
					<control type="label">
						<posx>10</posx>
						<posy>32</posy>
						<width>700</width>
						<height>30</height>
						<align>left</align>
						<font>List_Hint</font>
						<selectedcolor>White</selectedcolor>
						<label>$INFO[ListItem.Album]</label>
					</control>
					<control type="label">
						<posx>820</posx>
						<width>140</width>
						<height>30</height>
						<align>center</align>
						<font>List_Focused</font>
						<selectedcolor>White</selectedcolor>
						<label>$INFO[ListItem.Year]</label>
					</control>
					<!-- This control displays the Star rating-->
					<control type="image">
						<posx>770</posx>
						<posy>32</posy>
						<width>100</width>
						<height>25</height>
						<texture>other_textures/colorrating/$INFO[ListItem.StarRating]</texture>
					</control>
					<control type="label">
                        <posx>10</posx>
							<width>700</width>
							<height>30</height>
							<font>List_Focused</font>
							<selectedcolor>White</selectedcolor>
							<aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
						<visible>StringCompare(ListItem.Label,..)</visible>
					</control>
                    <control type="image">
                        <posx>700</posx>
                        <posy>13</posy>
                        <width>18</width>
                        <height>15</height>
                        <texture>watchedpanel.png</texture>
                        <visible>stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
                    </control>
                    <control type="image">
                        <posx>700</posx>
                        <posy>13</posy>
                        <width>18</width>
                        <height>15</height>
                        <texture>watchingpanel.png</texture>
                        <visible>ListItem.IsResumable + !stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
                    </control>
				</focusedlayout>
            </control>
            <control type="scrollbar" id="63">
                <posx>1110</posx>
                <posy>290</posy>
                <width>5</width>
                <height>315</height>
                <texturesliderbackground></texturesliderbackground>
                <textureslidernib>bar.png</textureslidernib>
                <textureslidernibfocus>scroll_nib.png</textureslidernibfocus>
                <texturesliderbar></texturesliderbar>
                <texturesliderbarfocus></texturesliderbarfocus>
                <showonepage>true</showonepage>
                <orientation>vertical</orientation>
            </control>
			<!-- Album Cover Elements -->
			<control type="group">
				<control type="image">
					<posx>50</posx>
					<posy>290</posy>
					<width>315</width>
					<height>315</height>
					<texture>white_box.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
					<posx>50</posx>
					<posy>290</posy>
					<width>315</width>
					<height>315</height>
					<texture>button.png</texture>
					<aspectratio>stretch</aspectratio>
					<bordersize>5</bordersize>
					<visible>StringCompare(ListItem.Label,..) | IsEmpty(ListItem.Icon)</visible>
				</control>
				<control type="image">
					<posx>50</posx>
					<posy>290</posy>
					<width>315</width>
					<height>315</height>
					<texture>tile.png</texture>
					<aspectratio>stretch</aspectratio>
					<bordersize>5</bordersize>
					<visible>StringCompare(ListItem.Label,..) | IsEmpty(ListItem.Icon)</visible>
				</control>
				<!-- This Control displays  the Main Album Poster-->
				<control type="image">
					<posx>100</posx>
					<posy>340</posy>
					<width>215</width>
					<height>215</height>
					<texture>$INFO[ListItem.Icon]</texture>
					<aspectratio>scale</aspectratio>
					<visible>StringCompare(ListItem.Label,..) </visible>
				</control>
				<!-- This Control displays  the Main Album Poster-->
				<control type="image">
					<posx>50</posx>
					<posy>290</posy>
					<width>315</width>
					<height>315</height>
					<texture>$INFO[ListItem.Icon]</texture>
					<aspectratio>scale</aspectratio>
					<bordersize>5</bordersize>
					<visible>!StringCompare(ListItem.Label,..) + !IsEmpty(ListItem.Icon)</visible>
				</control>
				<!-- This Control display the artist name below the main poster-->
				<control type="label" id="144">
					<posx>50</posx>
					<posy>610</posy>
					<width>465</width>
					<height>50</height>
					<font>Panel_Title_Footer</font>
					<align>left</align>
					<aligny>top</aligny>
					<visible>true</visible>
					<scroll>true</scroll>
					<scrollout>false</scrollout>
					<pauseatend>600</pauseatend>
					<scrollspeed>50</scrollspeed>
					<label>$INFO[ListItem.Artist]</label>
				</control>
			</control>
			
			
			
			
			
			
			
			
			
			
			
			
			
			
        </control>
    </include>
</includes>