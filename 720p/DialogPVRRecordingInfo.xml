<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">10</defaultcontrol>
    <controls>
        <control type="group">
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
            <control type="image">
                <posx>230</posx>
                <posy>288</posy>
                <width>915</width>
                <height>315</height>
                <texture>music_fanart_diffuse.png</texture>
            </control>
            <control type="fadelabel">
                <posx>230</posx>
                <posy>171</posy>
                <height>30</height>
                <width>1050</width>
                <font>Home_menu</font>
                <aligny>top</aligny>
                <label>[COLOR Accent]$INFO[ListItem.ChannelName][/COLOR] $INFO[ListItem.Title]</label>
                <visible>true</visible>
                <scroll>true</scroll>
                <scrollout>false</scrollout>
                <pauseatend>600</pauseatend>
                <scrollspeed>50</scrollspeed>
            </control>
            <control type="label">
                <posx>230</posx>
                <posy>230</posy>
                <width>1050</width>
                <height>50</height>
                <aligny>top</aligny>
                <font>Sort_Font_Small</font>
                <textcolor>white</textcolor>
                <label>$INFO[ListItem.StartDate] $INFO[ListItem.StartTime]</label>
            </control>
            <control type="group">
                <control type="textbox" id="400">
                    <description>Plot value</description>
                    <posx>250</posx>
                    <posy>302</posy>
                    <width>870</width>
                    <height>245</height>
                    <align>justify</align>
                    <pagecontrol>60</pagecontrol>
                    <label fallback="161">$INFO[ListItem.Plot]</label>
                </control>
                <control type="label">
                    <description>Duration</description>
                    <posx>315</posx>
                    <posy>552</posy>
                    <width>170</width>
                    <align>right</align>
                    <label>$LOCALIZE[180]:</label>
                </control>
                <control type="label">
                    <description>Duration value</description>
                    <posx>325</posx>
                    <posy>552</posy>
                    <width>470</width>
                    <font>Sort_Font_Small</font>
                    <label>[COLOR Accent]$INFO[ListItem.Duration][/COLOR]</label>
                </control>
                <control type="grouplist" id="9000">
                    <posx>25</posx>
                    <posy>240</posy>
                    <width>180</width>
                    <height>430</height>
                    <itemgap>-</itemgap>
                    <onup>9000</onup>
                    <ondown>9000</ondown>
                    <onright>60</onright>
                    <onleft>9000</onleft>
                    <orientation>vertical</orientation>
                    <control type="button" id="10">
                        <description>OK</description>
                        <label>186</label>
                        <width>180</width>
                        <align>right</align>
                        <focusedcolor>Accent</focusedcolor>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>