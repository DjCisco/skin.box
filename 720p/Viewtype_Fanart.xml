<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="Viewtype_Fanart">
        <control type="group">
            <visible>Control.IsVisible(527)</visible>
			<description>Fanart (id=527)</description>
            <!--This control defines the list that will display the items -->
			<control type="fixedlist" id="527">
                <visible>[Container.Content(artists) | Container.Content(movies) | Container.Content(tvshows)]</visible>
				 <animation type="TYPE" condition="Window.IsVisible(2001) | Window.IsVisible(2003) | Window.IsVisible(139) | Window.IsVisible(136)" reversible="false">
					<effect type="slide" end="-1500,0" time="300" />
				</animation>
				<animation type="TYPE" condition="!Window.IsVisible(2001) + !Window.IsVisible(2003) + !Window.IsVisible(139) + !Window.IsVisible(136)" reversible="false">
					<effect type="slide" start="-1500,0" time="300" />
				</animation>
				<animation type="WindowClose">
					<effect type="fade" time="300" />
					<effect type="slide" end="-1500,0" time="300" />
				</animation>
				<animation type="WindowOpen">
					<effect type="fade" time="300" />
					<effect type="slide" start="-1500,0" time="300" />
				</animation>
				<left>40</left>
                <top>20</top>
                <width>1200</width>
                <height>700</height>
                <onleft>9000</onleft>
				<onleft>Skin.ToggleSetting(showViewOptions)</onleft>
				<onright>60</onright>
                <onup>527</onup>
                <ondown>527</ondown>
				<movement>6</movement>
				<focusposition>6</focusposition>
                <pagecontrol>60</pagecontrol>
                <viewtype label="Fanart">Fanart</viewtype>
                <scrolltime>200</scrolltime>
          		<itemlayout width="1000" height="50">
                    <control type="label">
						<width>1200</width>
						<font>Music_Vis_Title4</font>
						<aligny>center</aligny>
						<label>[COLOR Accent]$INFO[ListItem.Label][/COLOR]</label>
						<animation effect="fade" start="100" end="50" condition="Control.HasFocus(527)">Conditional</animation>
						<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(527)">Conditional</animation>
                    </control>
				</itemlayout>
                <focusedlayout width="1000" height="100">
					<control type="label">
						<left>20</left>
						<width>1200</width>
						<height>90</height>
						<aligny>center</aligny>
						<font>Music_Vis_Title</font>
                        <label>$INFO[ListItem.Label]</label>
						<shadowcolor>FF000000</shadowcolor>
						<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(527)">Conditional</animation>
                    </control>
					
                </focusedlayout>            
			</control>	
			<control type="group">
				<animation type="TYPE" condition="Window.IsVisible(2001) | Window.IsVisible(2003) | Window.IsVisible(139) | Window.IsVisible(136)" reversible="false">
					<effect type="slide" end="+1500,0" time="300" />
				</animation>
				<animation type="TYPE" condition="!Window.IsVisible(2001) + !Window.IsVisible(2003) + !Window.IsVisible(139) + !Window.IsVisible(136)" reversible="false">
					<effect type="slide" start="+1500,0" time="300" />
				</animation>
				<animation type="WindowClose">
					<effect type="fade" time="300" />
					<effect type="slide" end="+1500,0" time="300" />
				</animation>
				<animation type="WindowOpen">
					<effect type="fade" time="300" />
					<effect type="slide" start="+1500,0" time="300" />
				</animation>
			<!--This control defines the scrollbar controlling the large list list -->
				<control type="scrollbar" id="60">
					<left>1275</left>
					<top>15</top>
					<width>5</width>
					<height>690</height>
					<onleft>527</onleft>
				   <orientation>vertical</orientation>
				</control>
				<!-- Previous Button -->
				<control type="button" id="110">
					<top>120</top>
					<left>1200</left>
					<width>60</width>
					<height>60</height>
					<onclick>Control.Move(527,-1)</onclick>
					<texturefocus flipy="true">down_arrow.png</texturefocus>
					<texturenofocus flipy="true">down_arrow.png</texturenofocus>
					<visible>[System.Platform.IOS | System.Platform.Android | System.getbool(input.enablemouse)]</visible>
				</control>
				<!-- Next Button -->
				<control type="button" id="120">
					<top>650</top>
					<left>1205</left>
					<width>60</width>
					<height>60</height>
					<onclick>Control.Move(527,1)</onclick>
					<texturefocus>down_arrow.png</texturefocus>
					<texturenofocus>down_arrow.png</texturenofocus>
					<visible>[System.Platform.IOS | System.Platform.Android | System.getbool(input.enablemouse)]</visible>
				</control>
		
			</control>	
        </control>
    </include>
</includes>