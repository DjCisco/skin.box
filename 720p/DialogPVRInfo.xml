<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">7</defaultcontrol>
    <controls>
        <control type="group">
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
            <animation type="Hidden">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="Visible">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
            <control type="image">
                <left>200</left>
                <top>290</top>
                <width>1035</width>
                <height>315</height>
                <texture>music_fanart_diffuse.png</texture>
            </control>
			<control type="label">
				<left>200</left>
				<include>ViewMainTitle</include>
                <label>$INFO[ListItem.Title]</label>
            </control>
            <control type="label">
                <left>815</left>
                <top>300</top>
                <height>50</height>
                <width>400</width>
				<align>right</align>
                <font>Panel_Description_Title</font>
                <label>$INFO[ListItem.ChannelName]</label>
            </control>
			<control type="label">
				<description>Duration value</description>
				<left>220</left>
				<top>300</top>
				<height>50</height>
				<width>400</width>
				<font>Panel_Description_Title</font>
				<label>$INFO[ListItem.StartDate]</label>
			</control>
			<control type="label">
                <left>815</left>
				<top>565</top>
				<width>400</width>
				<height>25</height>
				<align>right</align>
				<font>Panel_Description_Footer</font>
                <label>$INFO[ListItem.Duration]</label>
            </control>
			<control type="label">
                <left>220</left>
				<top>565</top>
				<width>400</width>
				<height>25</height>
				<font>Panel_Description_Footer</font>
                <label>$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime]</label>
            </control>
		   <!-- Tv Show Plot -->
			<control type="textbox" id="400">
				<description>Plot value</description>
				<left>220</left>
				<top>355</top>
				<width>995</width>
				<height>190</height>
				<font>Panel_Description</font>
				<align>justify</align>
				<pagecontrol>60</pagecontrol>
				<label fallback="161">$INFO[ListItem.Plot]</label>
			</control>
			<control type="grouplist" id="9000">
				<left>25</left>
				<top>290</top>
				<width>165</width>
				<height>430</height>
				<itemgap>5</itemgap>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<onright>60</onright>
				<onleft>9000</onleft>
				<orientation>vertical</orientation>
				<control type="button" id="7">
					<description>OK</description>
					<label>186</label>
					<width>165</width>
					<textoffsetx>10</textoffsetx>
					<font>Panel_Hint</font>						
					<align>center</align>
					<texturefocus>button.png</texturefocus>
					<texturenofocus>tile.png</texturenofocus>
					<focusedcolor>White</focusedcolor>
				</control>
				<control type="button" id="5">
					<description>Switch to Channel</description>
					<label>19165</label>
					<width>165</width>
					<textoffsetx>10</textoffsetx>
					<font>Panel_Hint</font>						
					<align>center</align>
					<texturefocus>button.png</texturefocus>
					<texturenofocus>tile.png</texturenofocus>
					<focusedcolor>White</focusedcolor>
				</control>
				<control type="button" id="6">
					<description>Record</description>
					<width>165</width>
					<textoffsetx>10</textoffsetx>
					<font>Panel_Hint</font>						
					<align>center</align>
					<texturefocus>button.png</texturefocus>
					<texturenofocus>tile.png</texturenofocus>
					<focusedcolor>White</focusedcolor>
				</control>
				<control type="image">
					<texture>$INFO[ListItem.Icon]</texture>
					<width>165</width>
					<height>165</height>
					<aspectratio>keep</aspectratio>
				 </control>
			</control>

        </control>
    </controls>
</window>