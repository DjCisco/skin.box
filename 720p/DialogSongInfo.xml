<?xml version="1.0" encoding="utf-8"?>
<window id="135">
    <defaultcontrol always="true">10</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <control type="group">
            <visible>!Window.IsActive(visualisation)</visible>
            <animation type="TYPE" condition="Window.IsVisible(2001)" reversible="false">
                <effect type="slide" end="-1500,0" time="200" />
            </animation>
            <animation type="TYPE" condition="!Window.IsVisible(2001)" reversible="false">
                <effect type="slide" start="-1500,0" time="200" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
            <control type="group">
                <left></left>
                <top></top>
                <!-- Background -->
				<control type="image">
                    <left>615</left>
                    <top>180</top>
                    <width>635</width>
                    <height>425</height>
                    <texture>music_fanart_diffuse.png</texture>
                </control>
				<!-- Album Cover -->
                <control type="image">
                    <description>Cover Image</description>
                    <left>180</left>
                    <top>180</top>
                    <width>425</width>
                    <height>425</height>
                    <texture>$INFO[ListItem.Icon]</texture>
                    <aspectratio align="right" aligny="center">stretch</aspectratio>
                    <bordertexture border="5">white_box.png</bordertexture>
                    <bordersize>5</bordersize>
                </control>
                <!-- Title -->
				<control type="fadelabel" id="140">
					<left>635</left>
                    <top>185</top>
                    <height>30</height>
                    <width>595</width>
					<font>Panel_Title</font>
                    <aligny>top</aligny>
                    <label>$INFO[ListItem.Title]</label>
                    <scroll>true</scroll>
                    <scrollout>false</scrollout>
                    <pauseatend>600</pauseatend>
                    <scrollspeed>50</scrollspeed>
					<visible>Container.Content(Songs)</visible>
				</control>
         		
				<control type="image">
					<left>635</left>
					<top>245</top>
					<width>100</width>
					<height>25</height>
					<texture>other_textures/colorrating/$INFO[ListItem.StarRating]</texture>
					<align>right</align>
				</control>

				<control type="grouplist">
					<left>635</left>
					<top>290</top>
					<height>400</height>
					<width>595</width>
					<itemgap>-</itemgap>
                    <orientation>vertical</orientation>
					
						<control type="label">
							<height>35</height>
							<label>Artist [COLOR Accent]$INFO[ListItem.Artist][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
						<control type="label">
							<height>35</height>
							<label>Album [COLOR Accent]$INFO[ListItem.Album][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
						<control type="label">
							<height>35</height>
							<label>Year [COLOR Accent]$INFO[ListItem.Year][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
						<control type="label">
							<height>35</height>
							<label>Disc Number [COLOR Accent]$INFO[ListItem.DiscNumber][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
						<control type="label">
							<height>35</height>
							<label>Track Number [COLOR Accent]$INFO[ListItem.TrackNumber][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
						<control type="label">
							<height>35</height>
							<label>Duration [COLOR Accent]$INFO[ListItem.Duration][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
						<control type="label">
							<height>35</height>
							<label>Genre [COLOR Accent]$INFO[ListItem.Genre][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
						<control type="label">
							<height>35</height>
							<label>Comment [COLOR Accent]$INFO[ListItem.Comment][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
							
			
				</control>
				
				<!-- Left Menu -->
				<control type="grouplist" id="9001">
                    <left>25</left>
                    <top>240</top>
                    <width>145</width>
                    <height>430</height>
                    <itemgap>-</itemgap>
                    <onup>14</onup>
                    <ondown>14</ondown>
                    <onright>9001</onright>
                    <onleft>9001</onleft>
                    <orientation>vertical</orientation>
                    <control type="button" id="10">
                        <description>Ok button</description>
						<width>145</width>
					    <label>186</label>
						<font>Panel_Hint</font>
                        <align>center</align>
                    </control>
                    <control type="button" id="11">
                        <description>Cancel button</description>
						<width>145</width>
					    <label>222</label>
						<font>Panel_Hint</font>
                        <align>center</align>
                    </control>
                    <control type="button" id="12">
                        <description>Album Info button</description>
						<width>145</width>
					    <label>10523</label>
						<font>Panel_Hint</font>
                        <align>center</align>
                    </control>
                    <control type="button" id="13">
                        <description>Poster button</description>
						<width>145</width>
						<font>Panel_Hint</font>
                        <label>$LOCALIZE[31723]</label>
                        <align>center</align>
                    </control>
                </control>
                <!-- Rating control -->
				<control type="button" id="14">
                    <description>Decrease Rating</description>
                    <left>70</left>
                    <top>427</top>
                    <width>33</width>
                    <height>22</height>
					<align>right</align>
                    <onclick>DecreaseRating</onclick>
                    <texturenofocus>other_textures/arrowdownfo.png</texturenofocus>
                    <texturefocus>other_textures/arrowdowng.png</texturefocus>
                    <onleft>15</onleft>
                    <onright>15</onright>
                    <onup>13</onup>
                    <ondown>10</ondown>
                </control>
                <!-- Rating control -->				
                <control type="button" id="15">
                    <description>Increase Rating</description>
                    <left>110</left>
                    <top>427</top>
                    <width>33</width>
                    <height>22</height>
					<align>right</align>
                    <onclick>IncreaseRating</onclick>
                    <texturenofocus>other_textures/arrowupfo.png</texturenofocus>
                    <texturefocus>other_textures/arrowupg.png</texturefocus>
                    <onleft>14</onleft>
                    <onright>14</onright>
                    <onup>13</onup>
                    <ondown>10</ondown>
                </control>
            </control>
        </control>
    </controls>
</window>