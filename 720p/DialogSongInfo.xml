<?xml version="1.0" encoding="utf-8"?>
<window id="135">
    <defaultcontrol always="true">9001</defaultcontrol>
     
    <controls>
        <control type="group">
            <visible>!Window.IsActive(visualisation)</visible>
            <animation type="TYPE" condition="Window.IsVisible(2001)" reversible="false">
                <effect type="slide" end="-1500,0" time="200" />
            </animation>
            <animation type="TYPE" condition="!Window.IsVisible(2001)" reversible="false">
                <effect type="slide" start="-1500,0" time="200" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
            <control type="group">
                <left></left>
                <top></top>
                <!-- Background -->
				<control type="image">
                    <left>615</left>
                    <top>180</top>
                    <width>635</width>
                    <height>425</height>
                    <texture>music_fanart_diffuse.png</texture>
                </control>
				<!-- Album Cover -->
                <control type="image">
                    <description>Cover Image</description>
                    <left>180</left>
                    <top>180</top>
                    <width>425</width>
                    <height>425</height>
                    <texture>$INFO[ListItem.Icon]</texture>
                    <aspectratio align="right" aligny="center">stretch</aspectratio>
                    <bordertexture border="5">white_box.png</bordertexture>
                    <bordersize>5</bordersize>
                </control>
                <!-- Title -->
				<control type="fadelabel" id="140">
					<left>635</left>
                    <top>185</top>
                    <height>30</height>
                    <width>595</width>
					<font>Panel_Title</font>
                    <aligny>top</aligny>
                    <label>$INFO[ListItem.Title]</label>
                    <scroll>true</scroll>
                    <scrollout>false</scrollout>
                    <pauseatend>600</pauseatend>
                    <scrollspeed>50</scrollspeed>
					<visible>Container.Content(Songs)</visible>
				</control>
				<control type="image">
					<left>635</left>
					<top>245</top>
					<width>100</width>
					<height>25</height>
					<texture>other_textures/colorrating/$INFO[ListItem.StarRating]</texture>
					<align>right</align>
				</control>
				<control type="grouplist">
					<left>635</left>
					<top>290</top>
					<height>400</height>
					<width>595</width>
					<itemgap>-</itemgap>
                    <orientation>vertical</orientation>
					
						<control type="label">
							<height>35</height>
							<label>Artist [COLOR Accent]$INFO[ListItem.Artist][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
						<control type="label">
							<height>35</height>
							<label>Album [COLOR Accent]$INFO[ListItem.Album][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
						<control type="label">
							<height>35</height>
							<label>Year [COLOR Accent]$INFO[ListItem.Year][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
						<control type="label">
							<height>35</height>
							<label>Disc Number [COLOR Accent]$INFO[ListItem.DiscNumber][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
						<control type="label">
							<height>35</height>
							<label>Track Number [COLOR Accent]$INFO[ListItem.TrackNumber][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
						<control type="label">
							<height>35</height>
							<label>Duration [COLOR Accent]$INFO[ListItem.Duration][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
						<control type="label">
							<height>35</height>
							<label>Genre [COLOR Accent]$INFO[ListItem.Genre][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
						<control type="label">
							<height>35</height>
							<label>Comment [COLOR Accent]$INFO[ListItem.Comment][/COLOR]</label>
							<font>Panel_Title_Footer</font>
						</control>
							
			
				</control>
				<!-- Left Menu -->
				<control type="grouplist" id="9001">
                    <left>25</left>
                    <top>240</top>
                    <width>145</width>
                    <height>430</height>
                    <itemgap>-</itemgap>
                    <onup>14</onup>
                    <ondown>14</ondown>
                    <onright>9001</onright>
                    <onleft>9001</onleft>
                    <orientation>vertical</orientation>
                    <control type="button" id="12">
                        <description>Album Info</description>
							<textoffsetx>5</textoffsetx>
							<width>145</width>
							<label>31048</label>
							<font>Panel_Hint</font>
                        <align>center</align>
                    </control>
                    <control type="button" id="13">
                        <description>Thumbnail</description>
							<width>145</width>
							<label>31049</label>
							<font>Panel_Hint</font>
                        <align>center</align>
                    </control>
                    <control type="button" id="7">
                        <description>Rating</description>
							<textoffsetx>5</textoffsetx>
							<width>145</width>
							<label>38023</label>
							<font>Panel_Hint</font>
                        <align>center</align>
                    </control>
                </control>
			</control>
        </control>
    </controls>
</window>