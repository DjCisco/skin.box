<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="Viewtype_MusicVideos">
        <control type="group">
            <visible>Control.IsVisible(59)</visible>
            <description>Music Videos View (id=59)</description>
             <animation type="TYPE" condition="Window.IsVisible(2003)" reversible="false">
                <effect type="slide" end="-1500,0" time="200" />
            </animation>
            <animation type="TYPE" condition="!Window.IsVisible(2003)" reversible="false">
                <effect type="slide" start="-1500,0" time="200" />
            </animation>
            <animation type="WindowClose">
                <effect type="fade" time="300" />
                <effect type="slide" end="+1500,0" time="300" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" time="300" />
                <effect type="slide" start="+1500,0" time="300" />
            </animation>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1280</width>
				<height>720</height>
				<texture>$INFO[ListItem.Property(Fanart_Image)]</texture>
				<aspectratio>scale</aspectratio>
			</control>
			<control type="panel" id="59">
                <left>370</left>
                <top>290</top>
                <width>800</width>
                <height>320</height>
                <scrolltime>200</scrolltime>
                <onup>59</onup>
                <ondown>59</ondown>
                <onright>left</onright>
                <onright>left</onright>
                <onright>left</onright>
                <onright>right</onright>
                <onright>down</onright>
                <onleft>9000</onleft>
				<onleft>Skin.ToggleSetting(showViewOptions)</onleft>
                <viewtype label="Cover">Music Videos View</viewtype>
                <orientation>vertical</orientation>
                <focusposition>4</focusposition>
                <pagecontrol>63</pagecontrol>
                <visible>$EXP[isMusicVideoList]</visible>
                <itemlayout width="160" height="160">
                    <control type="image">
                        <width>155</width>
                        <height>155</height>
                        <texture>tile.png</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
					<control type="image">
                        <width>155</width>
                        <height>155</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <aspectratio>scale</aspectratio>
						<bordersize>20</bordersize>
						<visible>String.IsEqual(ListItem.Label,..)</visible>
                    </control>
					<control type="image">
                        <width>155</width>
                        <height>155</height>
                        <texture>$INFO[ListItem.Art(poster)]</texture>
                        <aspectratio>scale</aspectratio>
						<bordersize>5</bordersize>
						<visible>!String.IsEqual(ListItem.Label,..)</visible>
                    </control>
					<control type="image">
						<left>5</left>
						<top>120</top>						
                        <width>145</width>
                        <height>30</height>
                        <texture>black.png</texture>
						<colordiffuse>CCFFFFFF</colordiffuse>
						<visible>!String.IsEqual(ListItem.Label,..)</visible>
                    </control>						
					 <control type="label">
						<font>List_Unfocused</font>
						<include>PanelButtonTitle</include>
				        <label>$INFO[ListItem.Title]</label>
                    </control>
                    <control type="image">
                        <left>95</left>
                        <top>-</top>
                        <width>60</width>
                        <height>60</height>
                        <texture>watched.png</texture>
                        <animation type="Unfocus" reversible="false">
                            <effect type="zoom" center="0,0" start="80" end="120" time="400" tween="back" easing="out" />
                            <effect type="fade" start="80" end="100" time="400" />
                        </animation>
                        <visible>[Container.Content(musicvideos) + String.IsEqual(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(TVShows) + String.IsEqual(ListItem.Overlay,OverlayWatched.png)]</visible>
                    </control>
                    <control type="image">
                        <left>95</left>
                        <top>-</top>
                        <width>60</width>
                        <height>60</height>
                        <texture>watching.png</texture>
                        <animation type="Unfocus" reversible="false">
                            <effect type="zoom" center="0,0" start="80" end="120" time="400" tween="back" easing="out" />
                            <effect type="fade" start="80" end="100" time="400" />
                        </animation>
                        <visible>Container.Content(musicvideos) + ListItem.IsResumable + !String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
                    </control>
                </itemlayout>
                <focusedlayout width="160" height="160">
                    <control type="image">
                        <width>155</width>
                        <height>155</height>
                        <texture>button.png</texture>
                    </control>
					<control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>155</width>
                        <height>155</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <aspectratio>scale</aspectratio>
						<bordersize>20</bordersize>
						<visible>String.IsEqual(ListItem.Label,..)</visible>
                    </control>
					<control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>155</width>
                        <height>155</height>
                        <texture>$INFO[ListItem.Art(poster)]</texture>
                        <aspectratio>scale</aspectratio>
						<bordersize>5</bordersize>
                        <visible>!String.IsEqual(ListItem.Label,..)</visible>
                    </control>
                    <control type="image">
                        <left>95</left>
                        <top>0</top>
                        <width>60</width>
                        <height>60</height>
                        <texture>watched.png</texture>
                        <animation type="Focus" reversible="false">
                            <effect type="zoom" center="155,0" start="80" end="120" time="400" tween="back" easing="out" />
                            <effect type="fade" start="80" end="100" time="400" />
                        </animation>
                        <visible>[Container.Content(musicvideos) + String.IsEqual(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(TVShows) + String.IsEqual(ListItem.Overlay,OverlayWatched.png)]</visible>
                    </control>
                    <control type="image">
                        <left>95</left>
                        <top>0</top>
                        <width>60</width>
                        <height>60</height>
                        <texture>watching.png</texture>
                        <animation type="Focus" reversible="false">
                            <effect type="zoom" center="155,0" start="80" end="120" time="400" tween="back" easing="out" />
                            <effect type="fade" start="80" end="100" time="400" />
                        </animation>
                        <visible>Container.Content(musicvideos) + ListItem.IsResumable + !String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
                    </control>
                    <control type="image">
						<left>5</left>
						<top>120</top>						
                        <width>145</width>
                        <height>30</height>
                        <texture>black.png</texture>
						<colordiffuse>CCFFFFFF</colordiffuse>
                    </control>					
                    <control type="label">
						<font>List_Unfocused</font>
						<include>PanelButtonTitle</include>
                        <label>$INFO[ListItem.Title]</label>
	               </control>
                </focusedlayout>
            </control>
            <control type="label">
                <include>ViewMainTitle</include>
				<label>$INFO[ListItem.Title]</label>
            </control>
			<control type="scrollbar" id="63">
                <left>1170</left>
                <top>290</top>
                <width>5</width>
                <height>315</height>
                <texturesliderbackground></texturesliderbackground>
                <textureslidernib>bar.png</textureslidernib>
                <textureslidernibfocus>scroll_nib.png</textureslidernibfocus>
                <texturesliderbar></texturesliderbar>
                <texturesliderbarfocus></texturesliderbarfocus>
                <showonepage>true</showonepage>
                <orientation>vertical</orientation>
            </control>
			<!-- Album Cover Elements -->
			<control type="group">
				<control type="image">
					<left>50</left>
					<top>290</top>
					<width>315</width>
					<height>315</height>
					<texture>white_box.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
					<left>50</left>
					<top>290</top>
					<width>315</width>
					<height>315</height>
					<texture>button.png</texture>
					<aspectratio>stretch</aspectratio>
					<bordersize>5</bordersize>
					<visible>String.IsEqual(ListItem.Label,..) | String.IsEmpty(ListItem.Icon)</visible>
				</control>
				<control type="image">
					<left>50</left>
					<top>290</top>
					<width>315</width>
					<height>315</height>
					<texture>tile.png</texture>
					<aspectratio>stretch</aspectratio>
					<bordersize>5</bordersize>
					<visible>String.IsEqual(ListItem.Label,..) | String.IsEmpty(ListItem.Icon)</visible>
				</control>
				<!-- This Control displays  the Main Album Poster-->
				<control type="image">
					<left>100</left>
					<top>340</top>
					<width>215</width>
					<height>215</height>
					<texture>$INFO[ListItem.Icon]</texture>
					<aspectratio>scale</aspectratio>
					<visible>String.IsEqual(ListItem.Label,..) </visible>
				</control>
				<!-- This Control displays  the Main Album Poster-->
				<control type="image">
					<left>50</left>
					<top>290</top>
					<width>315</width>
					<height>315</height>
					<texture>$INFO[ListItem.Art(poster)]</texture>
					<aspectratio>scale</aspectratio>
					<bordersize>5</bordersize>
					<visible>!String.IsEqual(ListItem.Label,..)</visible>
				</control>
				<!-- This Control display the artist name and album below the main poster-->
				<control type="label" id="144">
					<left>50</left>
					<top>610</top>
					<width>700</width>
					<height>50</height>
					<font>Panel_Title_Footer</font>
					<align>left</align>
					<aligny>top</aligny>
					<visible>true</visible>
					<scroll>true</scroll>
					<scrollout>false</scrollout>
					<pauseatend>600</pauseatend>
					<scrollspeed>50</scrollspeed>
					<label>$INFO[ListItem.Artist,, • ]$INFO[ListItem.Album][COLOR Accent]$INFO[ListItem.Year, • ,][/COLOR]</label>
				</control>
			</control>
		</control>
    </include>
</includes>