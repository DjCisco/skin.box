<?xml version="1.0" encoding="utf-8"?>
<window id="123">
    <defaultcontrol always="true">5</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <animation type="WindowOpen">
            <effect type="fade" start="0" end="100" time="200" delay="300" />
        </animation>
        <animation type="WindowClose">
            <effect type="fade" start="100" end="0" time="200" />
        </animation>
        <animation type="Visible">
            <effect type="fade" start="0" end="100" time="200" delay="300" />
        </animation>
        <animation type="Hidden">
            <effect type="fade" start="100" end="0" time="200" />
        </animation>
		
		
			<control type="group">
				<visible>!Window.IsVisible(SliderDialog)</visible>
				<include>SkinTransparentBackground</include>
            </control>
		<control type="group">
            <left>50</left>
            <animation effect="fade" start="100" end="0" time="400" condition="Window.IsVisible(SliderDialog) | Window.IsVisible(FileBrowser)">Conditional</animation>
            
			<!-- Background -->
			<control type="image">
                <top>290</top>
                <width>1160</width>
                <height>360</height>
                <texture>tile.png</texture>
            </control>
			<control type="label" id="2">
                <description>Settings</description>
                <top>215</top>
                <height>30</height>
                <width>800</width>
                <font>Panel_Title</font>
                <align>Left</align>
				<aligny>Top</aligny>
                <textcolor>Accent</textcolor>
            </control>
            <control type="grouplist" id="5">
                <description>Control Area</description>
                <top>290</top>
                <width>1160</width>
                <height>360</height>
                <itemgap>0</itemgap>
                <orientation>vertical</orientation>
                <pagecontrol>60</pagecontrol>
                <onleft>28</onleft>
                <onright>28</onright>
                <onup>28</onup>
                <ondown>28</ondown>
			</control>
            <control type="button" id="7">
                <description>Default Button</description>
                <align>left</align>
                <focusedcolor>Accent</focusedcolor>
				<font>List_Settings</font>
            </control>
            <control type="radiobutton" id="8">
                <description>Default RadioButton</description>
				<align>left</align>
                <focusedcolor>Accent</focusedcolor>
				<font>List_Settings</font>
            </control>
            <control type="spincontrolex" id="9">
                <description>Default spincontrolex</description>
                <align>left</align>
                <reverse>yes</reverse>
                <focusedcolor>Accent</focusedcolor>
                <textureup>other_textures/arrowupfo.png</textureup>
                <textureupfocus>other_textures/arrowupg.png</textureupfocus>
                <texturedown>other_textures/arrowdownfo.png</texturedown>
                <texturedownfocus>other_textures/arrowdowng.png</texturedownfocus>
				<font>List_Settings</font>
            </control>
            <control type="sliderex" id="10">
                <description>Default Slider</description>
                <align>left</align>
                <focusedcolor>Accent</focusedcolor>
				<font>List_Settings</font>
            </control>
            <control type="image">
                <left>1160</left>
                <top>290</top>
                <width>40</width>
                <height>40</height>
                <texture flipy="true">down_arrow.png</texture>
                <visible>Container(5).HasPrevious</visible>
                <animation effect="fade" time="400">VisibleChange</animation>
            </control>
            <control type="image">
                <left>1160</left>
                <top>620</top>
                <width>40</width>
                <height>40</height>
                <texture>down_arrow.png</texture>
                <visible>Container(5).HasNext</visible>
                <animation effect="fade" time="400">VisibleChange</animation>
            </control>
        </control>
    </controls>
</window>